{
  "name": "auth-micro",
  "version": "1.0.0",
  "description": "Micro Service for Authentication using jwt",
  "main": "server.js",
  "repository": {
    "url": "https://github.com/Schnueggel/auth-micro",
    "type": "git"
  },
  "dependencies": {
    "ava": "0.18.2",
    "bcrypt": "1.0.2",
    "bluebird": "3.4.7",
    "body-parser": "1.16.1",
    "express": "4.14.1",
    "jsonwebtoken": "7.3.0",
    "lodash": "4.17.4",
    "mongodb": "2.2.24",
    "passport": "0.3.2",
    "passport-facebook": "2.1.1",
    "pm2": "2.4.0",
    "redis": "2.6.5",
    "request-promise": "4.1.1"
  },
  "devDependencies": {
    "@types/request-promise": "4.1.33",
    "ava": "0.18.2",
    "commitizen": "2.9.6",
    "conventional-changelog-lint": "1.1.0",
    "cz-customizable": "4.0.0",
    "husky": "0.13.1",
    "node-rsa": "0.4.2",
    "request": "2.79.0",
    "request-promise-native": "1.0.3",
    "rimraf": "2.6.0",
    "tslint": "4.4.2",
    "typescript": "2.3.1"
  },
  "scripts": {
    "commit": "git-cz",
    "commitmsg": "conventional-changelog-lint -e",
    "precommit": "yarn run lint",
    "test": "ava ./dist/**/*.spec.js",
    "start": "pm2 start dist/server.js --name=auth-micro",
    "lint": "tslint src/**/*.ts",
    "start:watch": "pm2 start dist/server.js --name=auth-micro --watch",
    "log": "pm2 log auth-micro --lines 50",
    "stop": "pm2 stop auth-micro",
    "cleanup": "rimraf ./dist",
    "build": "yarn run cleanup && tsc --rootDir src --outDir dist",
    "build:watch": "yarn run cleanup && tsc --rootDir src --outDir dist -w"
  },
  "keywords": [
    "auth",
    "jwt",
    "service"
  ],
  "author": "Christian Steinmann<christian.steinmann77@gmail.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  }
}
