{
  "name": "auth-micro",
  "version": "1.0.0",
  "description": "Micro Service for Authentication using jwt",
  "main": "server.js",
  "repository": {
    "url": "https://github.com/Schnueggel/auth-micro",
    "type": "git"
  },
  "dependencies": {
    "ava": "0.19.1",
    "bcrypt": "1.0.2",
    "bluebird": "3.5.0",
    "body-parser": "1.17.2",
    "express": "4.15.3",
    "jsonwebtoken": "7.4.1",
    "lodash": "4.17.4",
    "mongodb": "2.2.26",
    "pm2": "2.4.6",
    "redis": "2.7.1",
    "request": "2.81.0",
    "request-promise": "4.2.1"
  },
  "devDependencies": {
    "@types/request-promise": "4.1.33",
    "ava": "0.19.1",
    "commitizen": "2.9.6",
    "conventional-changelog-lint": "1.1.9",
    "cz-customizable": "5.0.0",
    "husky": "0.13.3",
    "node-rsa": "0.4.2",
    "request": "2.81.0",
    "request-promise-native": "1.0.4",
    "rimraf": "2.6.1",
    "tslint": "5.3.0",
    "typescript": "2.3"
  },
  "scripts": {
    "commit": "git-cz",
    "commitmsg": "conventional-changelog-lint -e",
    "precommit": "npm run lint",
    "test": "ava ./dist/**/*.spec.js",
    "start": "pm2 start dist/server.js --name=auth-micro",
    "lint": "tslint src/**/*.ts",
    "start:watch": "pm2 start dist/server.js --name=auth-micro --watch",
    "log": "pm2 log auth-micro --lines 50",
    "stop": "pm2 stop auth-micro",
    "cleanup": "rimraf ./dist",
    "build": "npm run cleanup && tsc --rootDir src --outDir dist",
    "build:watch": "npm run cleanup && tsc --rootDir src --outDir dist -w"
  },
  "keywords": [
    "auth",
    "jwt",
    "service"
  ],
  "author": "Christian Steinmann<christian.steinmann77@gmail.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  }
}
